#!/usr/bin/env bash

# shellcheck source=./jh-lib
. jh-lib

TARGET_HOST="$1"

if [ "$1" = "-w" ]; then
  while ! jh-ssh-ping "$2"; do
    sleep 2s
  done
  exit 0
fi

header_start "Pinging host $TARGET_HOST"
if ! ping -w 1 -c 1 "$TARGET_HOST" >/dev/null; then
  echo "ICMP ping: '$TARGET_HOST' is not reachable" >&2
  exit 2
fi
header_done

# header_start "Adding key"
# ssh-keyscan "$TARGET_HOST" >>~/.ssh/known_hosts
# header_done

header_start "Trying to open an ssh connection"
time status=$(
  ssh \
    -o ConnectTimeout=20 \
    -o HashKnownHosts=no \
    "$TARGET_HOST" echo pong 2>&1 | grep -oE 'pong|denied|sftp'
)
header_done

# -o BatchMode=yes \
# -o CheckHostIP=no \
# -o StrictHostKeyChecking=no \
# -o HashKnownHosts=no \

if [[ $status != pong && $status != denied && $status != sftp ]]; then
  echo "SSH ping: failed with status: $status"
  exit 2
fi

exit 0
