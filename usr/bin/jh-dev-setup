#!/usr/bin/env bash

set -o errexit

# shellcheck source=../bin/jh-lib
. jh-lib

KEY="bin/packages-cryp-key"
if [ ! -r "$KEY" ]; then
    echo "Please store '$KEY' for git-crypt" >&2
    exit 1
fi

header "Configuring git"
jh-git-config-global

curl --silent --show-error "https://api.github.com/users/jehon/repos?page=1&per_page=100" |
    jq -c ".[] | select (.archived == false) | select(.)" |
    while read -r L; do

        NAME="$(echo "$L" | jq -r ".name")"
        URL="$(echo "$L" | jq -r ".ssh_url")"

        # echo "$L"
        header "$NAME ($URL)"
        # echo "Url: $URL"

        if [ -r "$NAME" ]; then
            ok "Already checked out: $NAME"
            (cd "$NAME" && git pull) >/dev/null
            continue
        else
            git clone "$URL" "$NAME" >/dev/null
            ok "Checked out at $NAME"
        fi
    done

#
