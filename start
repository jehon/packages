#!/usr/bin/env bash

# This script can be run more than once

set -e

if [[ "$(whoami)" != "root" ]]; then
    echo "You need to be root to run this script"
    exit 255
fi

echo "*** Installing required packages"
apt install -y apt-transport-https

echo "*** Installing source from github"

echo "deb [trusted=yes] http://jehon.github.io/packages/ /" \
    > "/etc/apt/sources.list.d/jehon-github.list"

echo "*** Updating sources"
apt update

echo "*** Installing jehon-base-minimal"
apt install -y jehon-base-repositories
/usr/bin/jh-apt-configure-repositories.sh

apt update

echo "*** Installing jehon-base-minimal"
apt install -y jehon-base-minimal

echo ""
echo ""
echo ""
echo ""
echo "*** Install done ***"
echo "SSH is enabled through the firewall"
