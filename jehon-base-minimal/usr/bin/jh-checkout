if [ -x packages/setup-profile.sh ]; then
    header "Setting up the profile"
    # TODO: use "patch" instead
    PF="$(pwd -L)/packages/repo/profile-patch"
    cat <<-EOF >"$PF"
#
# File: $HOME/.bashrc
# Tag: jh-git-checkout
#

. $(pwd -L)/packages/setup-profile.sh

EOF
    jh-patch-file.sh "$PF"

    header "Setting up apt to local repo"
    sudo bash -c "echo 'deb [trusted=yes] file://$(pwd -L)/packages/repo /' > /etc/apt/sources.list.d/jehon-package-repo.list"
fi
