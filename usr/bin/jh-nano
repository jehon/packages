#!/usr/bin/env bash

RUN="/bin/nano"

if [ "$1" = "" ]; then exit 0; fi

if [ -e "$1" ]; then
	if [ -w "$1" ]; then
		$RUN "$@"
	else
		echo "This file can not be modified by you!"
		read -r -p "Press any key"
		sudo $RUN "$@"
	fi
else
	DIR="$(dirname "$1")"
	if [ -w "$DIR" ]; then
		$RUN "$@"
	else
		echo "This file can not be created by you!"
		read -r -p "Press any key"
		sudo $RUN "$@"
	fi
fi
