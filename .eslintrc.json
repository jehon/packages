{
  "root": true,
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "rules": {
    "indent":             [ "error", "tab" ],
    "linebreak-style":    [ "error", "unix" ],
    "quotes":             [ "error", "single" ],
    "semi":               [ "error", "always" ],
    "no-unused-vars":     [ "error", { "argsIgnorePattern": "^_" }],
    "no-console":         [ "error", { "allow": [ "info", "warn", "error"] } ],
    "no-trailing-spaces": [ "error" ]
  }
}
