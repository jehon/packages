#!/usr/bin/env bash

# shellcheck source=/dev/null
. jh-lib.sh

domount() {
	mkdir -p "/media/$1"
	mount //"$JH_SYNOLOGY_IP"/$1 /media/$1 \
		-t cifs \
		-o vers=1.0,auto,user,noexec,nosuid,ro,credentials=/root/synology.credentials,iocharset=utf8,cache=strict
}

domount photo

mkdir -p /media/nfs
mount "$JH_SYNOLOGY_IP":/volume3/tftp ~/media/nfs
