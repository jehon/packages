#!/usr/bin/env bash

if [ -x /usr/bin/xtermcontrol ]; then
  /usr/bin/xtermcontrol --bg black --fg "rgb:0/0/FFFF" --title "SSH to $1"
fi

resetColor() {
  if [ -x /usr/bin/xtermcontrol ]; then
    /usr/bin/xtermcontrol --bg black --fg white --title "SSH to $1"
  fi
}

trap resetColor EXIT
trap resetColor TERM

/usr/bin/ssh "$@"

resetColor "$1"
