#!/usr/bin/env bash

#
# Activate the local copy of the repo
#

ROOT="$( dirname "$( dirname "$( dirname "$( dirname "$( realpath "${BASH_SOURCE[0]}" )" )" )" )" )"

echo "Found root: $ROOT"

LINE="deb [trusted=yes] file://$ROOT/repo /"

echo "$LINE" > /etc/apt/sources.list.d/jehon-package-repo.list
